<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    @Scripts.Render("~/bundles/modernizr")
    @Html.Partial("_urlVariables")
    <link href="~/Scripts/Loader/css/jquery.loading.css" rel="stylesheet" />
    <script src="~/Scripts/Loader/js/jquery.loading.js"></script>

</head>
<body>
    <header class="fixed-top navbar-light ">
        <a href="#" class="logo">
            <img src="~/images/logo.png" alt="home" class="web_view" />
            <img src="~/images/logo_mobile.jpg" alt="home" class="mobile_view" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Hello !! @(CoreEntites.SessionManagement.SessionManagement.LoggedInUser != null ? CoreEntites.SessionManagement.SessionManagement.LoggedInUser.UserName : "")
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                @*  <a class="dropdown-item" href="#" id="btnProfile" data-target="#myModal" data-toggle="modal">Profile</a>*@
                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account", new { area = "" })">Change Password</a>
                <a class="dropdown-item" href="@Url.Action("LogOff", "Account", new { area = "" })">Logout</a>
            </div>

        </div>
    </header>
    <div class="container-fluid outer_box">


        <div class="container-fluid outer_box">
            <div class="row">
                <nav class="sidebar col-sm-3 col-md-2">
                    <ul class="nav-pills">
                        <li class="drop_down">
                            <a class="active" href="#"><span><img src="images/doc.svg" alt="" /></span> Document Management <em class="side_arrow"></em></a>
                            <ul>
                                <li><a href="#">File Manager</a></li>
                                <li><a href="#">File Administration</a></li>
                                <li><a href="#">Cloud Upload</a></li>
                            </ul>
                        </li>
                        <li><a href="#"><span><img src="images/info.png" alt="" /></span>Personal Information</a></li>
                        <li><a href="@Url.Action("Dashboard","Firm",new { area="FirmArea"})">Clients</a></li>
                        <li><a href="@Url.Action("Index","Employees",new { area="FirmArea"})">Employees</a></li>
                    </ul>
                </nav>
                @RenderBody()
            </div>
        </div>


    </div>





</body>
</html>
