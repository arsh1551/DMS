@model CoreEntites.ViewModel.FirmViewModel
@{
    Layout = "~/Areas/SuperAdmin/Views/Shared/_FirmLayout.cshtml";
}

<main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
    <div class="main_section" id="dvPartial">
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success" id="dvAlertSuccess">
                <label id="lblAlertSuccess">@ViewBag.Success</label>
            </div>
        }        
        @using (Html.BeginForm("SaveFirm", "Firm", FormMethod.Post, new { @class = "", @id = "ClientForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="alert alert-danger" id="dvAlertDanger" style="display:none;">
                    <label id="lblAlertDanger"></label>
                </div>
                <div class="form-group" style="display:none">
                    <div class="col-md-10">
                        @*  <input type="hidden" id="IndividualRecordId" value="IndividualRecordId" name="IndividualRecordId" />*@
                        @Html.HiddenFor(model => model.FirmId)
                    </div>
                </div>
                <h2>Add Firm Information</h2>
                <br />
                @*<div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.RadioButtonFor(m => m.ClientType, "1") Individual
                            @Html.RadioButtonFor(m => m.ClientType, "2") Company
                            
                        </div>
                    </div>

                </div>*@
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Firm">Firm Name</label>
                            @Html.EditorFor(model => model.FirmName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Firm Name", @maxlength = "100" } })
                        </div>
                    </div>
                  
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="FirmEmail">EmailAddress</label>
                            @Html.EditorFor(model => model.FirmEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email of Firm"} })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="UserName">User Name</label>
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter User Name"} })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Password">Password</label>
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "invalid-feedback" })


                        </div>
                    </div>               
                    </div>



                @*<div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="clientfilename">Birth Date</label>
                            @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Select DOB", @maxlength = "50" } })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="clientfilename">Phone Number</label>
                            @Html.EditorFor(model => model.PhoneNumber , new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Phone Number", @maxlength = "15" } })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="clientEmailAddress">Email Address</label>
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email", @maxlength = "50" } })
                            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "invalid-feedback" })
                        </div>
                    </div>

                </div>*@
                
                <input type="submit" id="btnUpdate" name="UpdateProfile" value="Add" class="btn btn-primary" />
            </div>
        }
    </div>
</main>
